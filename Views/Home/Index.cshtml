@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using TP1_Sotomayor.Models
@model List<Equipe>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h3 class="text-right">Equipes</h3>
        </div>
        <div class="col-2 text-right">
            <a class="btn btn-success" asp-controller="Home" asp-action="Create">
                Create Neuve
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    Logo
                </th>                
                <th>
                    Name
                </th>
                <th>                
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%">
                        <a asp-controller="Joueur" asp-action="Recherche">
                            <img class="img-fluid" src="@item.ImgFile">
                            
                           @*  <img class="img-fluid" src="@item.Logo"> *@
                        </a>
                        @* <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                            @item.TypeName
                        </a> *@
                    </td>
                    <td width="30%">
                        <h3>@item.Nom</h3>
                    </td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-info mx-2" asp-action="Edit" asp-route-Id="@item.Id">
                                Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@item.Id">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
