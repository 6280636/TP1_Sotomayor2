@model TP1_Sotomayor.Models.Equipe

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Equipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="row p-3 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <input asp-for="@Model.Id" class="form-control" hidden />
                    <div class="col-4">
                        <label asp-for="@Model.Nom" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Nom" class="form-control" />
                        <span asp-validation-for="@Model.Nom" class="text-danger"></span>
                    </div>
                </div>
                <br/>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Description" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Description" class="form-control" />
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.ImgFile" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.ImgFile" class="form-control" />
                        <span asp-validation-for="@Model.ImgFile" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row  py-2">
                    <div class="col-10 offset-4 row">
                        <div class="col-5">
                            <input type="submit" class="btn btn-success w-100" value="Create" />
                        </div>
                        <div class="col-5">
                            <a asp-action="Index" class="btn btn-secondary w-100">Back to list</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

