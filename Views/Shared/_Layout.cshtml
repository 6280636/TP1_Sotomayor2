@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="fr">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/143598ce12.js" crossorigin="anonymous"></script>
   <title>Document</title>
</head>

<body>
    <header>
        <h1>Grandes Equipes de Soccer</h1>
    </header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <nav>
        <div class="table">
            <ul>
                <li class="menu-acc">
                    @* <a href="~/Home/Index" style="color:black"><i class="fas fa-search"></i>Accueil</a> *@
                    <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Accueil</a>
                </li>
                <li class="menu-rech">
                    @* <a href="~/Joueur/Recherche" style="color:black"><i class="fas fa-search"></i>Recherche</a> *@
                    <a asp-controller="Joueur" asp-action="Recherche"><i class="fas fa-search"></i>Recherche</a>
                </li>
                <li class="menu-fav">
                    @* <a href="~/Favoris/Favoris" style="color:black"><i class="fa-regular fa-star"></i>Favoris</a> *@
                    <a asp-controller="Favoris" asp-action="Index"><i class="fas fa-star"></i>Favoris</a>
                </li>
                <li class="menu-det">
                    @* <a href="~/Joueur/Detail" style="color:black"><i class="fa-regular fa-star"></i>Détail</a> *@
                    <a asp-controller="Joueur" asp-action="Detail"><i class="fas fa-search"></i>Détail</a>
                </li>
            </ul>
        </div>
    </nav>
    <main>
        <br /><br />
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
 </body>
</html>
