                    Ajouter aux favoris
                </button>
            </form>

        </div>
        <div class="col-md-4">
            <img src="@Model.ImgFile" alt="Image de l'entité" class="img-fluid">
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-around">
        <div class="v col-md-8">
            <h2>Description</h2>
            <p>@Model.Description</p>
         </div>
    </div>
</div>
