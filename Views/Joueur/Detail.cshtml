@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TP1_Sotomayor.Models.Joueur




<div class="container">
    <h2 class="detail titre"> Detail du Personnage</h2>
    <div class="row">
        <!-- Image de l'entité à gauche -->
        <div class="col-md-4">
            <img src="@Model.ImgFile" alt="Image de l'entité" class="img-fluid">
        </div>
        <!-- Description de l'entité à droite -->
        <div class="col-md-4">
            <h2>@Model.Nom</h2>
            <ul>
                <li>Age: @Model.Age</li>               
                <li>Équipe: @Model.Equipe</li>                
            </ul>
            <!-- Formulaire pour ajouter l'entité aux favoris -->
            <form method="post" asp-controller="Favoris" asp-action="AjouterUnJoueur">
                <!-- Champ caché contenant le nom de l'entité -->
                <input type="hidden" name="id" value="@Model.Id">
                <!-- Bouton pour soumettre le formulaire avec une icône et un texte -->
                <button type="submit" class="btn btn-primary">
